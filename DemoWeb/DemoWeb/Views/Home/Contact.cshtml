@model DemoWeb.Models.ContactViewModel
@{
    ViewData["Title"] = "Contacto";
}

<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4">
                <h1 class="display-5">¿Tienes alguna consulta?</h1>
                <p class="lead text-muted">Estamos aquí para ayudarte. Completa el formulario y uno de nuestros agentes te responderá a la brevedad.</p>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Horario de atención</h5>
                        <p class="card-text">Lun - Vie: 9:00 - 18:00</p>
                        <h6 class="mt-3">Otras formas de contacto</h6>
                        <ul class="list-unstyled">
                            <li><strong>Tel:</strong> +1 (555) 123-4567</li>
                            <li><strong>Email:</strong> support@example.com</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-lg">
                    <div class="card-body p-4">

                        @if (ViewBag.Success == true)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <strong>Gracias!</strong> Tu consulta ha sido enviada. Nos comunicaremos contigo pronto.
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <h3 class="card-title mb-4">Envíanos tu consulta</h3>

                        <form asp-action="Contact" method="post" novalidate>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control form-control-lg" placeholder="Tu nombre (opcional)" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control form-control-lg" placeholder="correo@ejemplo.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Message" class="form-label"></label>
                                <textarea asp-for="Message" class="form-control" rows="5" placeholder="Describe tu consulta aquí..."></textarea>
                                <span asp-validation-for="Message" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Enviar consulta</button>
                            </div>

                            @Html.AntiForgeryToken()
                        </form>

                        <div class="mt-4 text-muted small">Usamos tus datos solo para responder tu consulta. Revisa nuestra <a asp-action="Privacy" asp-controller="Home">política de privacidad</a>.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
